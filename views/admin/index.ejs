<div class="page-header">
  <h3>Administration</h3>
</div>

<div class="row-fluid">
  <h4>Images en page d'acceuil</h4>

  <% pictures.forEach(function (picture) { %>
    <% if (picture.homePage) { %>
      <div class="album-box">
        <a href="/picture/<%= picture.id %>">
          
            <img src="<%= picture.pathLittleSize %>">
          
          <%= picture.name %>
        </a>
      </div>
    <% } %>
  <% }); %>
</div>

<div class="row-fluid">
  <h4>Images dans album</h4>
  <% var picturesId = [] %>
  <form method="post" action="/pictures" class="form-horizontal">
    <input type="hidden" name="pictures" value="<%= picturesId %>">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Supprimer toutes les photos sans album" class="btn btn-danger">
  </form>
  <% pictures.forEach(function (picture) { %>
    <% console.log(picture); %>
    <% if (!picture.album) { %>
      <% picturesId.push(picture.id); %>
      <div class="album-box">
        <a href="/picture/<%= picture.id %>">
          
          <img src="<%= picture.pathLittleSize %>">
          
          <%= picture.name %>
        </a>
      </div>
    <% } %>
  <% }); %>
</div>
