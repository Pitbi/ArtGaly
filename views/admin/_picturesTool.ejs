<div class="pictures-tool">
	<div class="row-fluid">
		<h4>Albums</h4>
		<ul class="unstyled">
			<% albums.forEach(function (album) { %>
				<li><a href="/album/<%= album.id %>"><%= album.name %></a></li>
			<% }) %>
		</ul>
	</div>
	<div class="row-fluid">
	  <h4>Images sans album</h4>

	  <% var picturesId = [] %>
	  <% pictures.forEach(function (picture) { %>
	    <% console.log(picture); %>
	    <% if (!picture.album) { %>
	      <% picturesId.push(picture.id); %>
	      <div class="album-box">
	        <a href="/picture/<%= picture.id %>">
	          
	          <img src="<%= picture.pathLittleSize %>">
	          
	          <%= picture.name %>
	        </a>
	      </div>
	    <% } %>
	  <% }); %>
	</div>
	
  <form method="post" action="/pictures" class="form-horizontal">
    <input type="hidden" name="pictures" value="<%= picturesId %>">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Supprimer toutes les photos sans album" class="btn btn-danger">
  </form>
</div>