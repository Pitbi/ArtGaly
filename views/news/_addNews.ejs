<div class="row-fluid">
  <div class="hided-form">
    <form method="post" action="/news" class="form-horizontal">
      <div class="control-group">
        <label class="control-label" for="inputName">Titre:</label>
        <div class="controls">
          <input type="text" value="<%= news.title || '' %>" name="news[title]"></input>
        </div>
      </div>
      <div class="news-elements">
        <div class="span10 control-group news-element">
          <label class="control-label" for="inputName">
            News
          </label>
          <input type="text" value="<%= news.title || '' %>" name="news[elements][]">
        </div>
        <div class="span2">
          <a class="btn action add-news-element">
            <i class="icon-plus-sign icon-2x" title="Ajouter un élément à la news"></i>
          </a>
        </div>
      </div>
      <div class="input-append">
        <div class="control-group">
          <input class="btn" type="submit" value="Créer">
          <a class="action hide-form-btn btn btn-danger">Retour</a>
        </div>
      </div>
    </form>
  </div>
</div>