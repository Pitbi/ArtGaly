<div class="row-fluid>">  
  <a class="btn action show-form-btn2">Ajouter un commentaire</a>
  <div class="hided-form2">
    <form method="post" action="/comments" class="form-inline add-comment">
      <input type="hidden" name="comment[picture]" value="<%= picture.id %>">
      <div class="control-group">
        <div class="controls">
          <input type="text" value="" name="comment[sender]" placeholder="Votre nom..."></input>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <input type="text" value="" name="comment[senderMail]" placeholder="Votre email... (facultatif)."></input>
        </div>
        <div class="controls">
          <small><i>Seul le webmaster aura accès à votre mail.</i></small>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <textarea name="comment[message]" placeholder="Message"></textarea>
        </div>
      </div>
      <div class="control-group">
          <input type="submit" value="envoyer" class="btn"></input><a class="action hide-form-btn2 btn btn-danger">Annuler</a>
      </div>
    </form> 
  </div>
</div>

<div class="row-fluid">
  <% picture.comments.forEach(function (comment) { %>
    <div class="comment">
      <h5><%= comment.sender %> <small><%= parseDate(comment.date) %> - <%= comment.senderMail %></small></h5>
      <p><%= comment.message %></p>
    </div>
     
  <% }); %>
</div>